<% include ../header_top %>
<%- renderScriptsTags(script_files) %>
<%- renderStylesTags(style_files) %>
<% include ../header_bottom %>

<h1 class="col-md-offset-2">Student registration</h1>

<div class="col-md-offset-2 col-lg-8 well">
    <form id="createForm" method="POST" action="/students" class="form-horizontal">
        <div class="form-group">
            <label for="firstName" class="col-lg-3 control-label">First name</label>
            <div class="col-lg-9">
                <input class="form-control" 
                       type="text" 
                       id="firstName" 
                       name="firstName" 
                       placeholder="First name"
                       value="<%= (reg_student) ? reg_student.firstName : '' %>"></input>
            </div>
        </div>
        <div class="form-group">
            <label for="lastName" class="col-lg-3 control-label">Last name</label>
            <div class="col-lg-9">
                <input class="form-control" 
                       type="text" 
                       id="lastName" 
                       name="lastName" 
                       placeholder="Last name"
                       value="<%= (reg_student) ? reg_student.lastName : '' %>"></input>
            </div>
        </div>
        <div class="form-group">
            <label for="birthDay" class="col-lg-3 control-label">Birthday</label>
            <div class="col-lg-9">
                <input class="form-control" 
                       type="date" 
                       id="birthDay" 
                       name="birthDay"
                       value="<%= (reg_student) ? renderDateStrWithFormat(reg_student.birthDay, 'YYYY-MM-DD') : '1990-01-01' %>"></input>
            </div>
        </div>
        <div class="form-group">
            <label for="universityName" class="col-lg-3 control-label">Name of university</label>
            <div class="col-lg-9">
                <input class="form-control" 
                       type="text" 
                       id="universityName" 
                       name="universityName" 
                       placeholder="Name of university"
                       value="<%= (reg_student) ? reg_student.universityName : '' %>"></input>
            </div>
        </div>
        <div class="form-group">
            <label for="groupNumber" class="col-lg-3 control-label">Group number</label>
            <div class="col-lg-9">
                <input class="form-control" 
                       type="text" 
                       id="groupNumber" 
                       name="groupNumber" 
                       placeholder="Group number"
                       value="<%= (reg_student) ? reg_student.groupNumber : '' %>"></input>
            </div>
        </div>
        <div class="form-group">
            <label for="personalId" class="col-lg-3 control-label">Personal ID</label>
            <div class="col-lg-9">
                <input class="form-control" 
                       type="text" 
                       id="personalId" 
                       name="personalId" 
                       placeholder="Personal ID"
                       value="<%= (reg_student) ? reg_student.personalId : '' %>"></input>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-lg-3 control-label">Email</label>
            <div class="col-lg-9">
                <input class="form-control" 
                       type="email" 
                       id="email" 
                       name="login" 
                       placeholder="Email"
                       value="<%= (reg_student) ? reg_student.login : '' %>"></input>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-3 control-label">Password</label>
            <div class="col-lg-9">
                <input class="form-control" type="password" id="password" name="password" placeholder="Password"/>
            </div>
        </div>
        <div class="form-group">
            <label for="confirm_password" class="col-lg-3 control-label">Confirm password</label>
            <div class="col-lg-9">
                <input class="form-control" type="password" id="confirm_password" name="confirm_password" placeholder="Password confirmation"/>
            </div>
        </div>
        
        <input type="submit" class="btn btn-primary pull-right" value="Create"/>
  </form>
  <% if(errors) { %>
    <div class="list-group reg-errors">
      <% errors.forEach(function(error){ %>
        <div class="alert alert-danger"><%= error.msg %></div>
      <% }); %>
    </div>
  <% } %>
</div>



<% include ../footer %>