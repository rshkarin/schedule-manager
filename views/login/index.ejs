<% include ../header_top %>
<%- renderScriptsTags(script_files) %>
<%- renderStylesTags(style_files) %>
<% include ../header_bottom %>

<h1 class="col-md-offset-3">Log-in</h1>
<div class="col-md-offset-3 col-lg-6 span4 well">
    <div class="container">
		<form id="loginForm" class="form-horizontal" method="POST" action="/login" novalidate="novalidate">
			<div class="form-group">
                <label class="col-lg-3 control-label" for="email">Email</label>
                <div class="col-lg-9">
                    <input class="form-control" type="email" id="email" name="username" placeholder="Email"></input>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label" for="password">Password</label>
                <div class="col-lg-9">
                   	<input class="form-control" type="password" id="password" name="password" placeholder="Password"/>
                </div>
            </div>

        	<button type="submit" class="btn btn-primary pull-right">Log-in</button>
     	</form>
     	<div style="margin-top: 30px; margin-left: -10px;">No account? Then, register <a href="/students/register">here</a></div>
    </div>

	<% if(message != '') { %>
		<div class="alert alert-danger login-errors"><%= message %></div>
	<% } %>
</div>

<% include ../footer %>